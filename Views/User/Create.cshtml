@model dotnetCore.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LanguageList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageList" class="control-label"></label>
                <br>
                <select id="selector" name="selector">
                    @{
                        foreach (LanguageList language in Model.LanguageList)
                        {
                            <option value="@language.ID">@language.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="LanguageList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
